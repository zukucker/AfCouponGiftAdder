<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="AfCouponGiftAdder\Subscriber\MySubscriber">
            <argument type="service" id="AfCouponGiftAdder\Service\CouponGiftAdderService" />
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="AfCouponGiftAdder\Service\CouponGiftAdderService">
             <argument type="service" id="Shopware\Core\Checkout\Cart\LineItemFactoryRegistry" />
             <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
             <argument type="service" id="promotion.repository" />
             <argument type="service" id="product.repository" />
             <argument type="service" id="media.repository" />
             <argument type="service" id="sales_channel.product.repository" />
             <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService" />
        </service>

        <service id="AfCouponGiftAdder\Storefront\Controller\ExampleController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="AfCouponGiftAdder\Core\Checkout\Cart\OverwritePriceCollector">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />

            <!-- after product collector/processor -->
            <tag name="shopware.cart.processor" priority="4500" />
            <tag name="shopware.cart.collector" priority="4500" />
        </service>

        <service id="AfCouponGiftAdder\Core\Content\Example\SalesChannel\ExampleRoute">
            <argument type="service" id="product.repository"/>
        </service>

    </services>
</container>
